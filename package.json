{
  "name": "peptiderx",
  "version": "1.0.0",
  "private": true,
  "description": "PeptideRx - Peptide therapy tracking platform",
  "workspaces": [
    "packages/*",
    "api"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build -w @peptiderx/shared",
    "build:api": "npm run build -w logmydose-api",
    "dev:api": "npm run dev -w logmydose-api",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
